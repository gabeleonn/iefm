{
    "extends": "@tsconfig/node20/tsconfig.json",

    "compilerOptions": {

        "lib": ["ES6"],
        "module": "Node16",
        "target": "ES6",

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node16",

        "allowJs": true,
        "baseUrl": "./",
        "paths": {
            "@app/*": ["./src/*"]
        },
    },
    "include": ["src/**/*", "index.ts"],
}